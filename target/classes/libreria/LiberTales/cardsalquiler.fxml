<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-padding: 12; -fx-border-color: #FF6347; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, #D3D3D3, 10, 0.5, 0, 0);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libreria.LiberTales.CardsAlquiler">
   <children>
      <!-- Imagen del libro -->
      <ImageView fx:id="libroImagen" fitHeight="142.0" fitWidth="119.0" style="-fx-effect: dropshadow(gaussian, #888888, 5, 0.5, 0, 0);" />
      
      <!-- Título del libro -->
      <Label fx:id="tituloLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Título del Libro 1">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Label>
      
      <!-- Sección de precios y botones -->
      <HBox alignment="CENTER_LEFT" prefHeight="142.0" prefWidth="321.0" spacing="12">
         <children>
		<!-- Fecha de expiración -->
		<Label fx:id="fechaExpiracion" contentDisplay="RIGHT" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #888888;" text="Fecha de expiración" />
        <!-- Fecha de inspiracion -->
        <Label fx:id="fechaInspiracion" contentDisplay="RIGHT" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #888888;" text="Fecha de inspiracion" />
         </children>
      </HBox>
   </children>
</HBox>
