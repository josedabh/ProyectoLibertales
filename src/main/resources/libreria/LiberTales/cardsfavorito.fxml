<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-color: #D3D3D3; -fx-border-radius: 5;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="libreria.LiberTales.CardsFavorito">
   <children>
      <ImageView fx:id="imageView" fitHeight="142.0" fitWidth="119.0">
      </ImageView>
      <Label fx:id="tituloLabel" style="-fx-font-size: 16px;" text="Título del Libro 1" />
      <HBox alignment="CENTER_RIGHT" layoutX="500.0" spacing="10">
         <children>
            <Button onAction="#switchToAnadiraCesta" style="-fx-background-color: #4CAF50; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;" text="Añadir cesta" />
            <Button style="-fx-background-color: #FF6347; -fx-text-fill: #FFFFFF; -fx-font-size: 14px;" text="Eliminar" />
         </children>
      </HBox>
   </children>
</HBox>
